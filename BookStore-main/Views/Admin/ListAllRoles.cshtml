@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Popis svih uloga";
}

<h1> Popis svih uloga </h1>

<a class="btn btn-primary mb-2" asp-action="AddRole"><i class="fa-solid fa-users"></i> Dodajte ulogu</a>

@if (Model.Any())
{
    <table class="table col-3">
        <thead>
            <tr>
                <td><h5>Uloga</h5></td>
                <td></td>
            </tr>
        </thead>
        @foreach (var role in Model)
        {
            <tbody>
                <tr>
                    <td>@role.Name</td>
                    <td class="text-center">
                        <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <h5> Koristite dugme navedeno gore kako biste dodali prvu ulogu </h5>
}