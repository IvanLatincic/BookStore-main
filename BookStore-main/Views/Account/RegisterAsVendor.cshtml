@using BookStore.Data.ViewModels;
@model RegisterVM

@{
    ViewData["Title"] = "Registracija prodavača";
}

<div class="row">
    <div class="col-md-5 offset-3">
        <h1> Registracija prodavača </h1>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Žao nam je</b> - @TempData["Error"]</span>
            </div>
        }

        <form asp-action="RegisterAsVendor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-lable" asp-for="EmailAddress"></label>
                <input class="form-control" asp-for="EmailAddress" autocomplete="off" />
                <span class="text-danger" asp-validation-for="EmailAddress"></span>
            </div>
            <div class="form-group">
                <label class="control-lable" asp-for="Password"></label>
                <input class="form-control" asp-for="Password" autocomplete="off" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label class="control-lable" asp-for="ConfirmPassword"></label>
                <input class="form-control" asp-for="ConfirmPassword" autocomplete="off" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="form-group">
                <input class="btn btn-outline-success float-right" type="submit" value="Registrirajte se" />
                <a class="btn btn-outline-secondary" asp-action="Login"> Ulogirajte se</a>
            </div>
        </form>
    </div>

</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
